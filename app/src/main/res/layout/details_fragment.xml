<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    tools:context=".ui_fragments.DetailsFragment">
    <Button

        android:id="@+id/deleteButton"
        android:layout_height="59dp"
        android:layout_width="59dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="5dp"
        android:layout_marginRight="5dp"
        android:rotationX="-4"
        app:backgroundTint="@color/design_default_color_background"
        app:icon="@android:drawable/ic_menu_delete"
        app:iconPadding="0dp"
        app:iconTint="@color/black" />

    <TextView
        android:id="@+id/textview_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/deleteButton"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="20dp"
        android:gravity="center"
        android:text="sunt aut facere repellat provident occaecati excepturi optio reprehenderitTitle"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textview_body"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textview_title"
        android:gravity="fill"
        android:padding="20dp"
        android:text="Body"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/textview_author"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textview_body"
        android:layout_alignRight="@+id/textview_body"
        android:gravity="right"
        android:paddingLeft="20dp"
        android:paddingTop="10dp"
        android:paddingRight="20dp"
        android:paddingBottom="5dp"
        android:text="author"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/textview_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textview_author"
        android:layout_alignRight="@+id/textview_author"
        android:gravity="right"
        android:paddingLeft="20dp"
        android:paddingTop="5dp"
        android:paddingRight="20dp"
        android:text="email"
        android:textSize="14sp"
        android:textStyle="italic" />

    <Button
        android:id="@+id/previous"
        android:layout_width="59dp"
        android:layout_height="59dp"
        android:text="@string/previous"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        app:backgroundTint="@color/design_default_color_background"
        app:icon="@drawable/abc_vector_test"
        app:iconTint="@color/black"
         />
</RelativeLayout>